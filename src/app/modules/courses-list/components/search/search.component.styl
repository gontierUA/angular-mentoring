@import "_variables.styl"
@import "_mixins.styl"

.search-form
  display flex
  position relative

.search-input-wrapper
  flex-grow 1
  +up-mobile()
    flex-grow 0

.search-icon
  transform rotate(90deg)
  width 21px
  height 21px
  position absolute
  top 14px
  left 14px
  color map-get(colors, 'steel')

.search-input
  width 100%
  height 48px
  padding 12px 42px
  border-radius 3px
  border solid 1px map-get(colors, 'mishka')
  background-color map-get(colors, 'white')
  font 14px/1.71 font-sans-pro
  color map-get(colors, 'slate-grey')
  +up-mobile()
    width 360px
