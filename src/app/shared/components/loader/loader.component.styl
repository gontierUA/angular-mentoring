@import "_variables.styl"
@import "_mixins.styl"

spinner-bg = 000;
spinner-opacity = 0.1;
spinner-active = map-get(colors, 'sushi');

.loader-wrapper
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  z-index 100
  backdrop-filter blur(2px)

.loader,
.loader:after
  border-radius 50%
  width 50px
  height 50px

.loader
  font-size 7px
  border-top 1.1em solid rgba(spinner-bg, spinner-bg, spinner-bg, spinner-opacity)
  border-right 1.1em solid rgba(spinner-bg, spinner-bg, spinner-bg, spinner-opacity)
  border-bottom 1.1em solid rgba(spinner-bg, spinner-bg, spinner-bg, spinner-opacity)
  border-left 1.1em solid spinner-active
  animation load 1.1s infinite linear
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

@-webkit-keyframes load
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

@keyframes load
  0%
    -webkit-transform: rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

