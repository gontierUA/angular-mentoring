@import "_variables.styl"
@import "_mixins.styl"

.page-header
  width 100%
  height 64px
  background-color map-get(colors, 'charcoal-grey')

.page-header-container
  display flex
  flex-direction row
  justify-content space-between

.site-logo-url
  overflow hidden;
  display block
  width 35px
  height 64px
  +up-mobile()
    width 140px

.site-logo
  width 140px
  height 64px
  object-fit contain

.menu
  display flex
  align-items center

.menu-item:first-child
  margin-right 25px

.user-login,
.log-off
  position relative
  color map-get(colors, 'white')
  background transparent
  padding-left 20px
  font 14px font-sans-pro

.log-off
  padding-left 25px
  outline none
  &:hover
    color map-get(colors, 'silver')

.icon-user,
.icon-exit
  position absolute
  left 0
  width 16px
  height 15px
  bottom 0


