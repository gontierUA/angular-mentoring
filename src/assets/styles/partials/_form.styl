.form
  padding 24px

.form-title
  font 600 24px/30px font-sans-pro
  color map-get(colors, 'dark')
  margin 0 0 18px 0
  display flex
  align-items center
  justify-content space-between

.form-error
  font 12px/18px font-sans-pro
  color map-get(colors, 'orange-red')
  margin-left 10px
  & + .form-required
    display none

.form-required
  font 12px/18px font-sans-pro
  color map-get(colors, 'steel')

.form-item
  margin-bottom 18px
  position relative
  &.small
    max-width 210px

.form-label
  margin-bottom 8px
  font 600 14px/18px font-sans-pro
  color map-get(colors, 'slate-grey')
  display flex
  justify-content space-between

.form-item-with-icon
  position relative

.form-item-icon
  position absolute
  top 4px
  right 4px
  .mat-icon-button
    width 30px
    height 30px
    line-height 30px
  .mat-datepicker-toggle-default-icon
    width 20px
    height 20px
    fill map-get(colors, 'silver')

.form-input
  padding 6px 12px
  font 400 14px/24px font-sans-pro
  border-radius 3px
  border 1px solid map-get(colors, 'mishka')
  color: map-get(colors, 'slate-grey')
  width 100%
  display block
  &.error
    border-color map-get(colors, 'orange-red')
  /textarea
    height 110px
    resize vertical

.form-buttons
  display flex
  align-items center
  justify-content flex-end
  padding-top 5px
  &.between
    justify-content space-between
